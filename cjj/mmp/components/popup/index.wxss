/* components/popup/index.wxss */
.popup {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80%;
  max-height: 100%;
  overflow-y: auto;
  color: #333;
  background-color: #fff;
  transition: .2s ease-out;
  transform: translate3d(-50%, -50%, 0);
}

.popup__header {
  padding: 15rpx 10rpx;
  font-size: 32rpx;
}

.popup__content {
  width: 100%;
  font-size: 26rpx;
}

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.7);
}